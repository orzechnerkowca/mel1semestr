int silnia() {
	int x;
	scanf_s("%d", &x);
	int i = 1;
	int wynik = 1;
	while (i<=x) {
		wynik = wynik * i;
		i += 1;
		
	}
	printf("\n%d", wynik);
	return 0;
}

int fibanci() {
	int n;
	int a = 1;
	int b = 1;
	scanf_s("%d", &n);
	printf("\n%d", a);
	printf(" %d", b);
	for (int i = 3; i <= n; i++) {
		int nastepny = a + b;
		printf(" %d", nastepny);
		a = b;
		b = nastepny;
	}
	
	return 0;
}

int kwadratowe() {
	int a, b, c;
	scanf_s("%d %d %d", &a, &b, &c);
	double delta = b * b - 4 * a * c;
	double pierwiastek = sqrt(delta);
	if (delta < 0){
		printf("\nbrak rozwiazan");
	}
	else if (delta == 0) {
		double x = (-b) / 2 * a;
		printf("\njedynym rozwiazaniem jest: %d", x);
	}
	else {
		double x1 = (-b + pierwiastek) / 2 * a;
		double x2 = (-b - pierwiastek) / 2 * a;
		printf("\npierwszym rozwiazaniem jest: %lf", x1);
		printf("\ndrugim rozwiazaniem jest: %lf", x2);
	}

	return 0;
}

int arytmetyczny() {
	int a, r, n;
	scanf_s("%d %d %d", &a, &r, &n);
	int suma = 0;
	for (int i = 0; i <= n; i++) {
		suma = suma + a;
		a = a + r;
	}
	printf("%d", suma);
	return 0;
}

int geometryczny() {
	int a, q, n;
	scanf_s("%d %d %d", &a, &q, &n);
	int suma = 1;
	for (int i = 0; i <= n; i++) {
		suma = suma + a;
		a = a * q;
	}
	printf("%d", suma);
	return 0;
}

int okregi() {
	graphics(500, 500);
	srand((unsigned int)time(NULL));
	double x1 = rand()%100+1;
	double y1 = rand()%100+1;
	double r1 = rand()%50+1;
	double x2 = rand()%100+1;
	double y2 = rand()%100+1;
	double r2 = rand()%50+1;
	printf("%lf %lf %lf %lf %lf %lf\n", x1, x2, y1, y2, r1, r2);
	circle(x1, y1, r1);
	circle(x2, y2, r2);
	if (sqrt(pow((x1 - x2), 2.0) + pow((y1 - y2), 2.0)) > (r1 + r2)) {
		printf("nie ma punktow");
	}
	else if (sqrt(pow((x1 - x2), 2.0) + pow((y1 - y2), 2.0)) == (r1 + r2)) {
		printf("jest jeden punkt");
	}
	else printf("sa dwa punkty");
	wait();
	return 0;
}

int wektory() {
	srand((unsigned int)time(NULL));
	int x = -5 + rand() % 11;
	int y = -5 + rand() % 11;
	int z = -5 + rand() % 11;
	printf("%d %d %d\n", x, y, z);
	double dlugosc = sqrt(pow(x, 2.0) + pow(y, 2.0) + pow(z, 2.0));
	printf("\ndlugosc to: %lf", dlugosc);
	return 0;
}

int porownywarka() {
	int a, b, c, d, e, f;
	scanf_s("%d %d %d %d %d %d", &a, &b, &c, &d, &e, &f);
	srand((unsigned int)time(NULL));
	int powtorki = 0;
	for (int i = 0; i < 6; i++) {
		int z = rand() % 49 + 1;
		printf("%d\t", z);
		if (z == a || z == b || z == c || z == d || z == e || z == f)
			powtorki++;
	}
	if (powtorki == 0) {
		printf("nie powtorzyly sie");
	}
	else printf("powtorki: %d", powtorki);
	return 0;
}
